extends layout
 
block content
    .navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          a.navbar-brand(href='../') Bootswatch
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-main')
            span.icon-bar
            span.icon-bar
            span.icon-bar
    .container
      #banner.page-header
        .row
          .col-lg-6
            h1 Slate
            p.lead Shades of gunmetal gray
      // Forms
      .col-lg-8
          .panel.panel-default
            .panel-body
              .bs-docs-section
                .row
                  .col-lg-12
                    .page-header
                      h1#forms Forms
                .row
                  .col-lg-6
                    .well
                      form.bs-example.form-horizontal
                        fieldset
                          legend Legend
                          .form-group
                            label.col-lg-2.control-label(for='inputEmail') Email
                            .col-lg-10
                              input#inputEmail.form-control(type='text', placeholder='Email')
                          .form-group
                            label.col-lg-2.control-label(for='inputPassword') Password
                            .col-lg-10
                              input#inputPassword.form-control(type='password', placeholder='Password')
                              .checkbox
                                label
                                  input(type='checkbox')
                                  | Checkbox
                          .form-group
                            label.col-lg-2.control-label(for='textArea') Textarea
                            .col-lg-10
                              textarea#textArea.form-control(rows='3')
                              span.help-block
                                | A longer block of help text that breaks onto a new line and may extend beyond one
                                | line.
                          .form-group
                            label.col-lg-2.control-label Radios
                            .col-lg-10
                              .radio
                                label
                                  input#optionsRadios1(type='radio', name='optionsRadios', value='option1', checked='')
                                  | Option one is this
                              .radio
                                label
                                  input#optionsRadios2(type='radio', name='optionsRadios', value='option2')
                                  | Option two can be something else
                          .form-group
                            label.col-lg-2.control-label(for='select') Selects
                            .col-lg-10
                              select#select.form-control
                                option 1
                                option 2
                                option 3
                                option 4
                                option 5
                              br
                              select.form-control(multiple='')
                                option 1
                                option 2
                                option 3
                                option 4
                                option 5
                          .form-group
                            .col-lg-10.col-lg-offset-2
                              button.btn.btn-default Cancel
                              button.btn.btn-primary(type='submit') Submit

  div.footer